@model IEnumerable<BettingRoom.Models.GameModel>

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.GameTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HomeTeam)
            </th>
            <th>
                @Html.Label(" ")
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GuestTeam)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Odds1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OddsX)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Odds2)
            </th>

            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.GameTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HomeTeam)
                </td>
                <td>
                    @Html.Label(" - ")
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GuestTeam)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Odds1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OddsX)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Odds2)
                </td>
            </tr>
        }

    </table>    


  
