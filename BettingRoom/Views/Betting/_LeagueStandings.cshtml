@model IEnumerable<BettingRoom.Models.TeamModel>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LeagueName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PointsInLeague)
        </th>
        <th></th>
    </tr>
   
@foreach (var item in Model) {   
    <tr>
        <td>
            @Ajax.ActionLink(@item.Name, "GetSpecificTeam", "Betting", new { id = @item.Id }, new AjaxOptions { UpdateTargetId = "detailsAboutTeamDiv" })
            <div id="detailsAboutTeamDiv" class="large-12 columns">

            </div>
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.LeagueName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PointsInLeague)
        </td>
    </tr>   
}

</table>

<script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/BettingScript.js"></script>
